#!/bin/bash
# ~/.config/rofi/power

chosen=$(echo -e "Log out\nShut down\nReboot\nSuspend" | rofi -dmenu -i -p)

if [[ $chosen = "Log out" ]]; then
    bspc quit || true
    openbox --exit
elif [[ $chosen = "Shut down" ]]; then
    systemctl poweroff
elif [[ $chosen = "Reboot" ]]; then
    systemctl reboot
elif [[ $chosen = "Suspend" ]]; then
    systemctl suspend
fi
