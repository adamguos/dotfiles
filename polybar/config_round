; ~/.config/polybar/config

[global/wm]
include-file = ~/.config/polybar/colors

[bar/workspaces]
enable-ipc = true
monitor = ${env:MONITOR:}

height = 40
width = 190
padding = 1

radius = 10

offset-x = 10
offset-y = 10

background = ${color.BG}
foreground = ${color.FG}

font-0 = monospace:size=20;3
font-1 = Iosevka Nerd Font Mono:size=24;6
font-2 = Iosevka Nerd Font Mono:size=16;4

modules-left = bspwm
; modules-right = wlan battery pulseaudio time bt

wm-restack = bspwm
override-redirect = false

[bar/time]
enable-ipc = true
monitor = ${env:MONITOR:}

height = 40
width = 250
padding = 1

radius = 10

offset-x = 50%:-125
offset-y = 10

background = ${color.BG}
foreground = ${color.FG}

font-0 = monospace:size=11;3
font-1 = Iosevka Nerd Font Mono:size=24;6
font-2 = Iosevka Nerd Font Mono:size=16;4

modules-center = time
; modules-right = wlan battery pulseaudio time bt

wm-restack = bspwm
override-redirect = false

[bar/status]
enable-ipc = true
monitor = ${env:MONITOR:}

height = 40
width = 280
