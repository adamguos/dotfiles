[module/polywins]
type = custom/script
exec = ~/.config/polybar/polywins.sh 2>/dev/null
format = <label>
label = %output%
label-padding = 0
tail = true
                                         
[module/bt]
type = custom/script
exec = echo ''
label = %{T3}%{T-}
format-foreground = ${color.FG}
format-background = ${color.BG}
format-padding = 1
click-left = "blueman-manager"

[module/mixer]
type = custom/script
exec = echo "mixer"
click-left = "pavucontrol"

[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
label-color1 = ${colors.foreground} 
label-background = ${colors.background} 
;label-padding = 2

[module/bspwm]
type = internal/bspwm

label-focused = 
label-occupied = 
label-empty = 

enable-click = true
reverse-scroll = false

label-focused-foreground = ${color.FG}
label-occupied-foreground = ${color.FG}
label-empty-foreground = ${color.BGA}

label-focused-padding = 1
label-occupied-padding = 1
label-empty-padding = 1

;label-focused = 
;label-focused-padding = 1
;
;label-occupied = 
;label-occupied-padding = 1
;
;
;label-empty = 
;label-empty-padding = 1


[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
format-online = "<icon-prev>  <toggle>  <icon-next> <label-song>"
format-online-padding = 2
label-song-padding = 1
label-song = %artist%: %title%

format-offline = <label-offline>
label-offline =  offline
format-offline-foreground = ${colors.foreground}
format-offline-background = ${colors.background}

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 45
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-padding = 2
format-foreground = ${colors.foreground}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-padding = 2
format-prefix = " "
format-foreground = ${colors.foreground}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface-type = wireless
interval = 3.0

format-connected = 直 <label-connected>
label-connected = "%{A1:networkmanager_dmenu:}%essid%%{A}"
format-connected-foreground = ${color.FG}
format-connected-background = ${color.BG}

label-disconnected = "%{A1:networkmanager_dmenu:}睊%{A}"
format-disconnected-foreground = ${color.FG}
format-disconnected-background = ${color.BG}

format-connected-padding = 1
format-disconnected-padding = 1

[module/eth]
type = internal/network
interface = eno1
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-color1 = ${colors.color1-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-color1 = ${colors.color1-alt}

[module/time]
type = internal/date
interval = 10

time = "%H:%M"
date = "%A %d %b"

format =  <label>
label = %date%, %time%
format-foreground = ${color.FG}
format-background = ${color.BG}
format-padding = 1

[module/pulseaudio]
type = internal/pulseaudio

format-volume = 墳 <label-volume>
